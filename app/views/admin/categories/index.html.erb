<div class="col-sm-12">
  <ul class="breadcrumb">
    <li><%= link_to t("admin.manage"), admin_root_path %></li>
    <li><%= t "catrgories" %></li>
  </ul>
</div>
<%= render "admin/layouts/left_bar" %>
<div class="col-sm-9">
  <div class="row box">
    <div class="col-sm-12">
      <h3 class="pull-left"><%= t "categories" %></h3>
    </div>
    <div class="col-sm-12">
      <div class="table-bordered">
        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= t "categories" %></th>
              <th colspan="3"><%= t "title_category" %></th>
            </tr>
          </thead>
          <tbody id="result_search">
            <% @categories.each_with_index do |category, index| %>
              <%= render category, index: index %>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="pull-right">
        <%= will_paginate @categories %>
      </div>
    </div>
  </div>
</div>
