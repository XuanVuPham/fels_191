<div class="col-sm-12">
  <ul class="breadcrumb">
    <li><%= link_to t("home"), admin_root_path %></li>
    <li><%= t "users" %></li>
  </ul>
</div>
<%= render "admin/layouts/left_bar" %>
<div class="col-sm-9">
  <div class="row box">
    <div class="col-sm-12">
      <h3 class="pull-left"><%= t "users" %></h3>
    </div>
    <div class="col-sm-12">
      <div class="table-bordered">
        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= t "users" %></th>
              <th><%= t "name" %></th>
              <th colspan="2"><%= t "email" %></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each_with_index do |user, index| %>
              <tr>
                <td>#<%= current_index Settings.per_page, index,
                @users.current_page %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                  <% unless current_user.is_user? user %>
                    <%= link_to t("delete"), admin_user_path(user.id), method: :delete,
                      class: "btn btn-danger btn-sm", data: {confirm: t("admin.confirm_del")} %>
                    <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="pull-right">
        <%= will_paginate @users %>
      </div>
    </div>
  </div>
</div>
