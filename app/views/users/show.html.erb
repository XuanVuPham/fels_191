<% provide :title, t("signup") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <p><em><%= gravatar_for @user %></em><br>
      <strong><%= @user.name %></strong><br>
      <code><%= @user.email %></code></p><br>
      <samp><%= t "user_info" %><%= @count_word %><%= t "words" %></samp><br>
      <samp><%= t "user_info" %><%= @user_lessons.length %><%= t "categories" %></samp><br>
  </aside>
</div>
